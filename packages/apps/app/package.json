{
  "name": "@omgslayzone/app",
  "version": "0.1.0",
  "private": true,
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "typecheck": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json",
    "postinstall": "cd ../../../node_modules/better-sqlite3 && npx node-gyp rebuild --target=39.2.7 --arch=arm64 --dist-url=https://electronjs.org/headers --release"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@omgslayzone/editor": "workspace:*",
    "@omgslayzone/onboarding": "workspace:*",
    "@omgslayzone/projects": "workspace:*",
    "@omgslayzone/settings": "workspace:*",
    "@omgslayzone/types": "workspace:*",
    "@omgslayzone/tags": "workspace:*",
    "@omgslayzone/task": "workspace:*",
    "@omgslayzone/tasks": "workspace:*",
    "@omgslayzone/task-terminals": "workspace:*",
    "@omgslayzone/terminal": "workspace:*",
    "@omgslayzone/ui": "workspace:*",
    "@omgslayzone/worktrees": "workspace:*",
    "@tailwindcss/typography": "^0.5.19",
    "better-sqlite3": "^12.6.2",
    "node-pty": "^1.1.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hotkeys-hook": "^5.2.3",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0"
